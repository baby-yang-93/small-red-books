/* pages/video/video.wxss */
page{
    width: 100%;
    height: 100%;
    display: block;
}
#myVideo{
     width: 100%;
     height: 70%;
     display: block;
     position: relative;
}
.share-box{
     display: flex;
     height: 100rpx;
     background: #333;
     width: 100%;
     position: absolute;
     bottom: 0;
     color: #fff;
}
.box-item{
     width: 50%;
     height: 100rpx;
     display: flex;
     margin: auto;
}
.share-box image,.navigator{
     width: 50rpx;
     height: 50rpx;
}
.detail-simple{
     width: 100%;
     height: 150rpx;
     position: absolute;
     bottom: 100rpx;
     color: #fff;
     font-size: 13px;
     padding: 20rpx;
     box-sizing: border-box;
     display: none;
}
.simple-top image{
     width: 60rpx;
     height: 60rpx;
     border-radius: 50%;
     vertical-align: middle;
     margin-right: 20rpx;
}
.simple-bottom{
     font-size: 11px;
     display: flex;
     justify-content: space-between;
     margin-top: 15rpx;
     height: 40rpx;
}
.bottom1{
     width: 87%;
}