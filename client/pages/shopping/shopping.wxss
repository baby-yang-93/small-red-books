/* pages/shopping/shopping.wxss */

.ad1 {
     display: flex;
     width: 100%;
     box-sizing: border-box;
     margin-top: 20rpx;
}

.ad1-item {
     width: 210rpx;
     background: #fff;
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
     height: 300rpx;
     margin-top: 30rpx;
     font-size: 15px;
     margin: 0 20rpx;
     box-shadow: 0 0 5px #ddd;
}

.ad1-item image {
     width: 210rpx;
     border-radius: 5% 5% 0 0;
}

.bt {
     font-size: 15px;
     font-weight: bold;
     padding-top: 15rpx;
}

.nr {
     font-size: 12px;
     padding-bottom: 15rpx;
     color: #666;
}

.ad2 {
     width: 100%;
     height: 200rpx;
     background: #fff;
     display: flex;
     justify-content: space-around;
     font-size: 10px;
     margin-top: 40rpx;
     align-items: center;
}

.ad2-item {
     position: relative;
}

.ad2-item image {
     width: 140rpx;
     height: 140rpx;
     border-radius: 50%;
}

.ad2-item  text {
     display: block;
     position: absolute;
     top: 40%;
     left: 20%;
     color: #fff;
     font-weight: bold;
     text-shadow: 0 0 8px #000;
}

.product {
     margin: 20rpx;
     column-count: 2;
     column-width: 50%;
     column-gap: 20rpx;
}

.product-item {
     display: inline-block;
     box-shadow: 0 0 5px #ddd;
     border-radius: 10rpx;
     overflow: hidden;
     background-color: #fff;
     position: relative;
     margin-bottom: 20rpx;
}

.product-item image {
     width: 100%;
}

.title {
     font-size: 15px;
     padding: 15rpx;
}

.info {
     font-size: 14px;
     color: #888;
     padding: 0 15rpx;
     height: 85rpx;
     overflow: hidden;
}
.limit{
     color: #fff;
     font-size: 12px;
     background: #fe2841;
     border-radius: 5rpx;
     display: inline-block;
     padding: 5rpx 10rpx;
     margin-left: 15rpx;
}
.item-bottom{
     display: flex;
     padding: 15rpx;
     justify-content: space-between;
}
.price{
     color: #fe2841;
     font-size: 15px;
     font-weight: bold;
     
}
.original{
     color: #666;
     font-size: 14px;
     text-decoration:line-through;
     padding-left: 10rpx;
}
.business{
     font-size: 10px;
     font-weight: bold;
     padding-top: 15rpx;
}
.cart image{
     width: 80rpx;
     height: 80rpx;
     opacity: 0.85;
     position: fixed;
     top:90%;
     right: 5%;
}