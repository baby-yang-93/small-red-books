/* pages/commodity-info/commodity-info.wxss */

.pic, .pic image, .pic swiper {
     width: 100%;
     height: 800rpx;
}

.pic {
     border-bottom: 1px solid #ddd;
}

.info {
     background: #fff;
     padding: 20rpx;
     box-sizing: border-box;
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
}

.info-top {
     margin: 20rpx 0;
     display: flex;
     justify-content: space-between;
     width: 100%;
}

.price {
     font-size: 18px;
     font-weight: bold;
     color: #fe2841;
     padding-right: 30rpx;
}

.hyj {
     font-size: 13px;
     color: #444;
}

.original {
     font-size: 12px;
     color: #111;
     font-weight: bold;
     margin-right: 5rpx;
}

.by {
     font-size: 10px;
     color: #fe2841;
     border: 1px solid #fe2841;
     padding: 3rpx 5rpx;
     border-radius: 8rpx;
     font-weight: bold;
}

.top-right {
     font-size: 10px;
     color: #666;
}

.open {
     display: flex;
     justify-content: space-between;
     width: 100%;
     background: #eee;
     font-size: 14px;
     padding: 18rpx 20rpx;
     border-radius: 8rpx;
     box-sizing: border-box;
     position: relative;
}

.open1::after {
     content: "";
     display: block;
     height: 40rpx;
     border-right: 1px solid #888;
     position: absolute;
     top: 30%;
     left: 73%;
}

.open2 {
     color: #fe2841;
}

.info-middle {
     font-size: 14px;
     width: 100%;
     display: flex;
     margin-top: 20rpx;
     color: #444;
}

.middle-left {
     width: 85%;
}

.xinyuan {
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
     font-size: 11px;
}

.xinyuan image {
     width: 40rpx;
     height: 40rpx;
}

.info-bottom {
     font-size: 14px;
     display: flex;
     background: #fff;
     padding: 20rpx;
}

.from {
     color: #444;
     margin-right: 10rpx;
}

.name {
     color: #06f;
}

.details {
     padding: 20rpx;
     background: #fff;
     margin-top: 15rpx;
     font-size: 13px;
     color: #444;
     position: relative;
}

.standard {
     margin-top: 15rpx;
     font-size: 13px;
     padding: 20rpx;
     background: #fff;
}

.contents {
     background: #fff;
     margin-top: 15rpx;
     font-size: 13px;
     color: #444;
}

.words {
     padding: 20rpx;
}

.contents image {
     width: 100%;
}

.pic-black {
     background: #000;
}

.price {
     font-size: 14px;
     color: #444;
     padding: 15rpx;
     margin-bottom: 100rpx;
}

.price-text {
     width: 100%;
     height: 50rpx;
     border-bottom: 1rpx solid #ddd;
     padding: 5rpx 0;
}

.price-detail1 {
     padding: 15rpx 0;
     font-size: 13px;
}

.buy {
     position: fixed;
     display: flex;
     width: 100%;
     bottom: 0;
     background: #fff;
     height: 60px;
}

.buy-pic {
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
     font-size: 11px;
     width: 13%;
     opacity: 0.8;
     padding: 20rpx;
     position: relative;
}

.num {
     background-color: rgb(247, 41, 59);
     width: 30rpx;
     height: 30rpx;
     border-radius: 50%;
     font-size: 8px;
     color: #fff;
     text-align: center;
     line-height: 30rpx;
     position: absolute;
     top: 12rpx;
     right: 26rpx;
}

.buy-pic image {
     width: 45rpx;
     height: 45rpx;
}

.text-all {
     font-size: 15px;
     color: #fff;
     line-height: 120rpx;
     width: 40%;
     text-align: center;
}

.jiaru {
     background-color: rgb(245, 125, 140);
}

.liji {
     background-color: rgb(255, 39, 65);
}

.return {
     font-size: 13px;
     background-color: rgb(245, 81, 101);
     color: #fff;
     position: fixed;
     bottom: 160rpx;
     width: 20%;
     padding: 10rpx 15rpx;
     border-radius: 0 30rpx 30rpx 0;
}

.to-top {
     width: 80rpx;
     height: 80rpx;
     background: #000;
     opacity: 0.8;
     font-size: 10px;
     border-radius: 50%;
     position: fixed;
     bottom: 200rpx;
     right: 25rpx;
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
     color: #fff;
}

.to-top image {
     width: 40rpx;
     height: 40rpx;
}
